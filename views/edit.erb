<form method="post" action="/artists/<%= @artist.id %>">
  <input type="hidden" name="_method" value="put">

  <div class="field-group">
    <label for="first-name-field" class="label">Name:</label>
    <div class="field">
      <input
        type="text"
        name="name"
        id="name-field"
        placeholder="Artist Name"
        required
        value="<%= @artist.name %>"
      />
   </div>
  </div>

  <div class="field-group">
    <label for="genre-field" class="label">Genre:</label>
    <div class="field">
      <input
        type="text"
        name="genre"
        id="genre-field"
        placeholder="Genre"
        value="<%= @artist.genre %>"
      />
   </div>
  </div>

  <div class="field-group">
    <label for="first-name-field" class="label">Logo URL (Optional):</label>
    <div class="field">
      <input
        type="text"
        name="logo"
        id="name-field"
        placeholder="Logo URL"
        value="<%= @artist.logo %>"
      />
   </div>
  </div>


  <button class="big-button button">Edit Artist Information</button>
</form>
